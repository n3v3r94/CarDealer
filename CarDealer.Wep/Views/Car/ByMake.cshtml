@Model CarsByMakeModel

@{
    ViewData["Title"] = $"{Model.Make} Cars";
}

<h2>@Model.Make Cars</h2>

<table class="table table-bordered table-hover">
    
    <thead>
        <tr>
            <th>
                Make
            </th>
            <th>
                Model
            </th>
            <th>
                Travell Distance
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var car in Model.Cars)
        {
        <tr>
            <th>
               @car.Make
            </th>
            <th>
                @car.Model
            </th>
            <th>
              @car.TravelledDistance 
            </th>
        </tr>

        }
    </tbody>

</table>  

